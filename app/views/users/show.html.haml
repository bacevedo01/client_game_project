- if @user.id == @current_user.id
	%h1 Hi #{@current_user.first_name}!
- else
	%h1 #{@user.first_name}'s Profile!

%h2 Your Games Collection:
.game-container
	-@games.each do |game|
		.game-container
			.game-info
				%h3= game.title
				.game-functionality
				= link_to 'Show', game
				= link_to 'Edit', edit_game_path(game)
				= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Game', new_game_path

- if @user.id == @current_user.id
	.your-friends
		-@your_friends.each do |friend|
			=link_to friend.first_name, user_path(friend)
- elsif @user.id != @current_user.id 
	.their-friends
		-@their_friends.each do |friend|
			=link_to friend.first_name, user_path(friend)


- if @user.id != @current_user.id && @user.id != @current_user.friends
	= link_to 'Add as friend', user_friends_path(@user), method: :post

