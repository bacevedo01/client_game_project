-if current_user
	%h1 Hi #{@current_user.first_name}!
-else
%h1 #{@user.first_name}'s Profile!

%h2 Your Games Collection:
.game-container
	-@games.each do |game|
		.game-container
			.game-info
				%h3= game.title
				.game-functionality
				= link_to 'Show', game
				= link_to 'Edit', edit_game_path(game)
				= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Game', new_game_path

= link_to('Logout', destroy_user_session_path, :method => :delete)
-if !@user.id
	= link_to 'Add as friend', new_friend_path

