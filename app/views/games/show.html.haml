= @game.votes.sum(:value)
.games-container
  %p#notice= notice
  .game-container
    .game-stats
      %h3= @game.title
      %p= "Players: #{@game.title}"
      %p= "Age: #{@game.age}"
      %p= "Play Time: #{@game.play_time}"
      %p= "Complexity: #{@game.complexity}"
      %p= "Publisher: #{@game.publisher}"
    .game-tags
      %h3 Tags
      - @tags.each do |tag|
        %p= tag.tag.name
    .game-description
      %p= "Description: #{@game.description}"
  .game-functionality
    = link_to 'Edit', edit_game_path(@game)
    = link_to 'Destroy', @game, method: :delete, data: { confirm: 'Are you sure?' }
    = link_to 'Back', games_path
.reviews-container
  - if @reviews
    - @reviews.each do |review|
      %h3= review.title
      %p= review.body
      %p= "Posted by #{review.user.username}"
  %h3 Create a New Review
  = form_for [@game, @new_review] do |f|
    = f.label 'Title'
    = f.text_field :title
    = f.label 'Body'
    = f.text_field :body
    = f.submit
= render partial: "votes/neutral"

